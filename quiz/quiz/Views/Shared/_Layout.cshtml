<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Anzelika Maslovska Animal quiz</title>
        <link rel="stylesheet" href="~/lib/bootstrap-5.1.3-dist/css/bootstrap.min.css" />
    </head>
    <body>
        <div class="container-fluid" style="height: 100vh">
            <div class="row h-25" style="min-height: 100px;">
            <header class="col" style="background-color: #303030; color: white;">
                    @RenderSection("Header")
                </header>
            </div>
            <div class="row h-50">
                <nav class="col-3" style="">
                     @RenderSection("Navigation")
                </nav>
                <main class="col-9" style="background-color: #e6e5e3">
                    @RenderBody()
                </main>
            </div>
        <div class="row h-25" style="background-color: #303030; color: white;">
                <div class="col h-100">
                    <footer class="h-100">
                        @RenderSection("Footer")
                    </footer>
                </div>
            </div>
        </div>
        <script src="~/lib/jQuery/jquery-3.6.0.min.js"></script>
        <script src="~/lib/bootstrap-5.1.3-dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>


